@{
    ViewData["Title"] = "Crypto Dashboard";
    var allTickers = ViewBag.AllTickers as List<(string Coin, Expenses.Models.TickerResponse)>;
    var accountInfo = ViewBag.AccountInfo;
    var topGainers = ViewBag.TopGainers as List<(string Coin, Expenses.Models.TickerResponse)>;
    var lowestPrices = ViewBag.LowestPrices as List<(string Coin, Expenses.Models.TickerResponse)>;
    Func<string, string> getCoinName = ViewBag.GetCoinName;
}

<div class="container-fluid p-0">
    <div class="row mb-2 mb-xl-3">
        <div class="col-auto d-none d-sm-block">
            <h3><strong>Crypto</strong> Dashboard</h3>
        </div>
    </div>

    <!-- All Tickers -->
    <div class="row text-dark">
        @if (allTickers != null)
        {
            @foreach (var item in allTickers)
            {
                <div class="col d-flex">
                    <div class="card flex-fill">
                        <div class="card-body">
                            <div class="row">
                                <div class="col mt-0">
                                    <h5 class="card-title">@getCoinName(item.Coin)/USD</h5>
                                </div>
                            </div>
                            <h4 class="mt-0 mb-1">$@(item.Item2.Ticker.Last.ToString("F2"))</h4>
                            <div class="mb-0">
                                <span class="text-muted">High: $@(item.Item2.Ticker.High.ToString("F2"))</span><br />
                                <span class="text-muted">Low: $@(item.Item2.Ticker.Low.ToString("F2"))</span><br />
                                <span class="text-muted">Volume: @(item.Item2.Ticker.Vol.ToString("F2")) BTC</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Account Info -->
    <div class="row text-dark">
        <div class="col d-flex">
            <div class="card flex-fill">
                <div class="card-body">
                    <div class="row">
                        <div class="col mt-0">
                            <h5 class="card-title">Account Info</h5>
                        </div>
                    </div>
                    <h4 class="mt-0 mb-1">Balance: $@(accountInfo?.Balance.ToString("F2") ?? "0.00")</h4>
                    <div class="mb-0">
                        <span class="text-muted">BTC: @(accountInfo?.BtcBalance.ToString("F4") ?? "0.0000")</span><br />
                        <span class="text-muted">ETH: @(accountInfo?.EthBalance.ToString("F4") ?? "0.0000")</span><br />
                        <span class="text-muted">LTC: @(accountInfo?.LtcBalance.ToString("F4") ?? "0.0000")</span><br />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Gainers -->
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">Top Gainers</h5>
                </div>
                <div class="card-body">
                    @if (topGainers != null)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var item in topGainers)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@getCoinName(item.Coin)</span>
                                    <span>$@item.Item2.Ticker.High.ToString("F2")</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No data available</p>
                    }
                </div>
            </div>
        </div>

        <!-- Lowest Prices -->
        <div class="col-12 col-md-6">
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">Lowest Prices</h5>
                </div>
                <div class="card-body">
                    @if (lowestPrices != null)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var item in lowestPrices)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@getCoinName(item.Coin)</span>
                                    <span>$@item.Item2.Ticker.Low.ToString("F2")</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No data available</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            background-color: #343a40;
            transition: all 0.3s;
        }

            .sidebar a {
                color: #ffffff;
                text-decoration: none;
                display: flex;
                align-items: center;
                padding: 15px;
                transition: background 0.3s;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

            .sidebar .fas {
                margin-right: 15px;
            }

            .sidebar .active {
                background-color: #495057;
            }

        .content {
            margin-left: 250px;
            padding: 20px;
            transition: margin-left 0.3s;
        }

        .sidebar.collapsed {
            width: 80px;
        }

            .sidebar.collapsed .content {
                margin-left: 80px;
            }

            .sidebar.collapsed a span {
                display: none;
            }

            .sidebar.collapsed a .fas {
                margin-right: 0;
            }
    </style>
